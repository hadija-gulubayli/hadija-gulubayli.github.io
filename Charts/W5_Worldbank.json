{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://api.worldbank.org/v2/country/Kor/indicator/SP.DYN.LE00.IN?format=json&per_page=1000&date=1990:2023",
    "format": {"property": "[1]"}
  },
  "width": 300,
  "height": 350,
  "mark": "line",
  "title": {
    "text": "South Korea: Life Expectancy Over Time",
    "subtitle": "Source: World Bank API"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "",
      "axis": {"grid": false}
    },
    "y": {"field": "value", "type": "quantitative", "title": ""},
    "color": {
      "field": "countryiso3code",
      "type": "nominal",
      "scale": {"range": ["#CD2E3A", "#024FA2"]},
      "legend": {
        "title": "Country",
        "orient": "top",
        "labelExpr": "datum.label =='Kor' ? 'South Korea': 'North Korea' "
      }
    }
  },
  "config": {}
}