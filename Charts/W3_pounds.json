{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "padding": { "left": 55, "right": 10, "top": 10, "bottom": 30 },

  "title": {
    "text": "Sterling Effective Exchange Rate Index",
    "subtitle": "Monthly data, 1997–latest | Source: ONS",
    "anchor": "start",
    "offset": 25
  },

  "data": {
    "url": "https://raw.githubusercontent.com/hadija-gulubayli/hadija-gulubayli.github.io/main/Data/sterling.csv",
    "format": { "type": "csv" }
  },

  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "color": "#002FA7"
      },
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": null,
          "axis": { "grid": false }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Index",
          "axis": { "grid": true }
        },
        "tooltip": [
          { "field": "Date", "type": "temporal", "title": "Date" },
          {
            "field": "Value",
            "type": "quantitative",
            "title": "Index",
            "format": ".2f"
          }
        ]
      }
    },

    {
      "data": {
        "values": [{ "event": "EU Referendum", "date": "2016-06-23" }]
      },
      "mark": { "type": "rule", "strokeDash": [4, 4] },
      "encoding": {
        "x": { "field": "date", "type": "temporal" },
        "tooltip": [{ "field": "event", "type": "nominal" }]
      }
    },

    {
      "data": {
        "values": [{ "event": "EU–UK TCA", "date": "2021-01-01" }]
      },
      "mark": { "type": "rule", "strokeDash": [4, 4] },
      "encoding": {
        "x": { "field": "date", "type": "temporal" },
        "tooltip": [{ "field": "event", "type": "nominal" }]
      }
    }
  ],

  "view": { "stroke": "transparent" }
}
