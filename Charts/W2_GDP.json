{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Russia GDP Growth",
    "anchor": "start",
    "subtitle": [
      "GDP growth (%)",
      "Source: Rosstat (via Economics Observatory)"
    ],
    "fontSize": 14,
    "subtitleFontSize": 12,
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "padding": { "left": 8, "right": 10, "top": 10, "bottom": 10 },
  "height": 250,
  "width": 400,
  "background": "#ffffff",
  "view": { "fill": "#ffffff", "strokeOpacity": 0 },
  "data": {
    "url": "https://raw.githubusercontent.com/EconomicsObservatory/api/main/agency_data/rus/grow.json",
    "format": { "type": "json" }
  },
  "mark": { "type": "line", "color": "#0042aa", "strokeWidth": 2 },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": { "title": null, "format": "%Y", "grid": false }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": { "title": null, "grid": false }
    }
  }
}
