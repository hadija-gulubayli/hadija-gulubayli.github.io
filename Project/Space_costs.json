{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Cost of space launches to low Earth orbit",
    "subtitle": [
      "Launch cost per kilogram of payload at first successful launch.",
      "Constant 2021 US$; logarithmic scale. Source: CSIS (2022) via Our World in Data."
    ],
    "anchor": "start"
  },
  "width": 350,
  "height": 350,
  "autosize": {"type": "fit", "contains": "padding"},
  "data": {
    "url": "https://raw.githubusercontent.com/hadija-gulubayli/hadija-gulubayli.github.io/refs/heads/main/Data/leo_space_costs.csv",
    "format": {"type": "csv"}
  },
  "mark": {"type": "circle", "size": 90, "opacity": 0.85},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "title": "Year of first successful launch",
      "scale": {"domain": [1958, 2021]},
      "axis": {"tickCount": 8, "format": "d"}
    },
    "y": {
      "field": "Launch cost per kilogram of payload",
      "type": "quantitative",
      "title": "Cost per kg (log scale, 2021 US$)",
      "scale": {"type": "log", "domain": [1000, 300000]}
    },
    "color": {
      "field": "Launch vehicle class",
      "type": "nominal",
      "title": "Payload class",
      "sort": ["Small", "Medium", "Heavy"]
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Launch vehicle"},
      {"field": "Year", "type": "quantitative", "format": "d"},
      {
        "field": "Launch cost per kilogram of payload",
        "type": "quantitative",
        "title": "Cost per kg (2021 US$)",
        "format": ","
      },
      {"field": "Launch vehicle class", "type": "nominal", "title": "Class"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "legend": {"orient": "top", "direction": "horizontal"}
  }
}