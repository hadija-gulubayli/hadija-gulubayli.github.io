{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Tracked objects in orbit, by type",
    "subtitle": [
      "U.S. Space Force SATCAT (Space-Track API): objects counted from launch until atmospheric re-entry."
    ],
    "anchor": "start"
  },
  "width": 500,
  "height": 350,
  "autosize": {"type": "fit", "contains": "padding"},
  "data": {
    "url": "https://raw.githubusercontent.com/hadija-gulubayli/hadija-gulubayli.github.io/main/Data/space_objects_by_type_timeseries.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"calculate": "toDate(datum.Year + '-01-01')", "as": "YearDate"}
  ],
  "mark": {"type": "area"},
  "encoding": {
    "x": {
      "field": "YearDate",
      "type": "temporal",
      "title": null,
      "axis": {"format": "%Y"}
    },
    "y": {
      "field": "Objects",
      "type": "quantitative",
      "title": "Objects in orbit",
      "stack": "zero"
    },
    "color": {
      "field": "Object type",
      "type": "nominal",
      "title": null,
      "sort": ["Rocket bodies", "Payloads", "Debris"]
    },
    "tooltip": [
      {"field": "Year", "type": "quantitative", "title": "Year"},
      {"field": "Object type", "type": "nominal", "title": "Type"},
      {
        "field": "Objects",
        "type": "quantitative",
        "title": "Objects",
        "format": ","
      }
    ]
  },
  "config": {
    "view": {"stroke": null},
    "legend": {"orient": "top", "direction": "horizontal"}
  }
}